<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cream"
    tools:context=".PantallaFavoritos">

    <TextView
        android:id="@+id/tituloFavoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Recetas Favoritas ❤️"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFavoritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Imagen de la receta -->
            <ImageView
                android:id="@+id/imgRecetaFavorito"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pasta_alfredo"
                android:background="/rounded_image_background" />

            <!-- Info de la receta -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombreRecetaFavorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lasaña de carne italiana"
                    android:textColor="#5A3722"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtDescripcionFavorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliciosa lasaña con carne, salsa de tomate y queso fundido."
                    android:textColor="#7A5B42"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnQuitarFavorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quitar de favoritos"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#C74C4C"
                    android:layout_marginTop="6dp"
                    android:paddingHorizontal="10dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
