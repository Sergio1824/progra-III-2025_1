<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".PantallaInicio">

    <ImageView

        android:id="@+id/icon_pot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/olla" />
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="COOK EASY"
        android:textColor="@color/brown"
        android:textSize="34sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Tu recetario de confianza"
        android:textColor="@color/brown"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_categories"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/background_orange"
        android:text="Ver Categorias"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_favorites"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/background_red"
        android:text="Favoritos â¤"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_add_recipe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/background_orange"
        android:text="Agregar Receta"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>

