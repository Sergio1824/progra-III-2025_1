<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@color/cream"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/imagen_categoria"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        tools:src="@drawable/olla"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/nombre_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:textSize="37sp"
            android:textStyle="bold"
            tools:text="Aperitivos" />

        <TextView
            android:id="@+id/contador_recetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:textSize="17sp"
            tools:text="(15 RECETAS)" />
    </LinearLayout>

    <ImageView
        android:id="@+id/flecha_derecha"
        android:layout_width="24dp"
        android:layout_height="88dp"
        android:src="@drawable/flecha_derecha" />

</LinearLayout>

